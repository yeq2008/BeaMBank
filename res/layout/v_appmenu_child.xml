<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appmenu_linearLayout_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ac_appmenu_child_tv01"
        android:layout_width="@dimen/appmenu_child_tv01_width"
        android:layout_height="@dimen/appmenu_linearLayout_height"
        android:layout_marginLeft="@dimen/appmenu_child_tv01_marginLeft"
        android:gravity="center_vertical"
        android:textColor="@drawable/menu_row_textcolor"
        android:textSize="@dimen/title_font_size" />

    <TextView
        android:id="@+id/ac_appmenu_child_tv02"
        android:layout_width="@dimen/appmenu_child_tv02_width"
        android:layout_height="@dimen/appmenu_child_tv02_width"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/margin_leftOrRight"
        android:gravity="center" />

</LinearLayout>