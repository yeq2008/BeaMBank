<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/appset_Setting_RelativeLayout"
        android:layout_width="@dimen/appset_setting_layout_width"
        android:layout_height="@dimen/appset_setting_layout_height"
        android:background="@drawable/ac_appset_settingshap"
        android:gravity="center" >

        <TextView
            android:id="@+id/appset_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_topOrBottom"
            android:gravity="center"
            android:text="密码修改"
            android:textColor="#000000"
            android:textSize="@dimen/appset_textView_textSize" />

        <TextView
            android:id="@+id/appset_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appset_imageView_height"
            android:layout_below="@+id/appset_TextView"
            android:layout_marginLeft="@dimen/appset_imageView_marginLeft"
            android:layout_marginTop="@dimen/appset_imageView_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/appset_EditText_Original"
            android:layout_width="@dimen/appset_editText_width"
            android:layout_height="@dimen/appset_editText_height"
            android:layout_alignBottom="@+id/appset_ImageView"
            android:layout_below="@+id/appset_TextView"
            android:layout_marginLeft="@dimen/appset_editText_marginLeft"
            android:layout_marginTop="@dimen/appset_imageView_marginTop"
            android:layout_toRightOf="@+id/appset_ImageView"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/appset_editText_padding"
            android:paddingRight="@dimen/appset_editText_padding"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/value_font_size" />

        <requestFocus />

        <TextView
            android:id="@+id/appset_ImageView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appset_imageView_height"
            android:layout_alignLeft="@+id/appset_ImageView"
            android:layout_below="@+id/appset_ImageView"
            android:layout_marginTop="@dimen/appset_imageView1_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/appset_EditText_Unused"
            android:layout_width="@dimen/appset_editText_width"
            android:layout_height="@dimen/appset_editText_height"
            android:layout_alignBottom="@+id/appset_ImageView1"
            android:layout_below="@+id/appset_EditText_Original"
            android:layout_marginLeft="@dimen/appset_editText_marginLeft"
            android:layout_marginTop="@dimen/appset_imageView1_marginTop"
            android:layout_toRightOf="@+id/appset_ImageView1"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/appset_editText_padding"
            android:paddingRight="@dimen/appset_editText_padding"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/value_font_size" />

        <TextView
            android:id="@+id/appset_ImageView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appset_imageView_height"
            android:layout_alignLeft="@+id/appset_ImageView"
            android:layout_below="@+id/appset_ImageView1"
            android:layout_marginTop="@dimen/appset_imageView1_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/appset_EditText_Again"
            android:layout_width="@dimen/appset_editText_width"
            android:layout_height="@dimen/appset_editText_height"
            android:layout_alignBottom="@+id/appset_ImageView2"
            android:layout_below="@+id/appset_EditText_Unused"
            android:layout_marginLeft="@dimen/appset_editText_marginLeft"
            android:layout_marginTop="@dimen/appset_imageView1_marginTop"
            android:layout_toRightOf="@+id/appset_ImageView2"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/appset_editText_padding"
            android:paddingRight="@dimen/appset_editText_padding"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/value_font_size" /> 

        <com.android.widgets.XCButton
            android:id="@+id/appset_AffirmButton"
            android:layout_width="@dimen/appset_editText_width"
            android:layout_height="@dimen/appset_editText_height"
            android:layout_below="@+id/appset_EditText_Again"
             android:layout_marginTop="@dimen/appset_AffirmButton_marginTop"
            android:layout_marginLeft="@dimen/appset_AffirmButton_marginLeft"
            android:background="@drawable/ac_appset_setting_affirmbutton"
            android:gravity="center"
            android:text="确      定"
            android:textColor="@color/whiteColor" />
    </RelativeLayout>

</RelativeLayout>