<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/takephotos_imageView_width"
        android:layout_height="@dimen/takephotos_imageView_height"
        android:layout_gravity="center"
        android:background="@drawable/frame_back"
        android:scaleType="fitStart" />

    <LinearLayout
        android:id="@+id/detailLayout"
        android:layout_width="@dimen/step_pannel_button_width"
        android:layout_height="@dimen/step2_content_btn_signname_height"
        android:layout_alignBottom="@id/imageView"
        android:layout_alignLeft="@id/imageView"
        android:layout_alignRight="@id/imageView"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>