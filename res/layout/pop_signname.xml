<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding"
        android:layout_weight="1"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin"
            android:layout_marginLeft="@dimen/padding_leftOrRight"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:text="请签名"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/red_buttom_textSize" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:padding="0dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_marginTop"
                android:layout_marginTop="@dimen/signname_view_marginTop"
                android:background="#E6E6E6" />

            <com.android.signature.SignatureView
                android:id="@+id/sigatureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/personinfo_layout_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_topOrBottom"
        android:layout_marginRight="@dimen/padding_leftOrRight"
        android:layout_marginTop="@dimen/padding_topOrBottom"
        android:background="@color/whiteColor"
        android:orientation="vertical" >

        <Button
            android:id="@+id/sigh_commit"
            android:layout_width="@dimen/pop_imageButton_width"
            android:layout_height="@dimen/pop_imageButton_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_topOrBottom"
            android:background="@drawable/btn_commit" />

        <Button
            android:id="@+id/sigh_reset"
            android:layout_width="@dimen/pop_imageButton_width"
            android:layout_height="@dimen/pop_imageButton_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_topOrBottom"
            android:background="@drawable/btn_reset" />

        <Button
            android:id="@+id/sigh_closeing"
            android:layout_width="@dimen/pop_imageButton_width"
            android:layout_height="@dimen/pop_imageButton_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_topOrBottom"
            android:background="@drawable/btn_close" />
    </LinearLayout>

</LinearLayout>