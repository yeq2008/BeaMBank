                android:layout_marginLeft="@dimen/padding_leftOrRight"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借贷五级分类"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />

            <TextView
                android:id="@+id/fgh_tv_jdwjfl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_leftOrRight"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否员工"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />

            <TextView
                android:id="@+id/fgh_tv_sfyg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_leftOrRight"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fgh_ll_02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_leftOrRight"
        android:layout_marginRight="@dimen/margin_leftOrRight"
        android:layout_marginTop="@dimen/crm_home_linearLayout_marginLeft"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fgh_tv_ck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_ck"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="¥865327"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_lc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_lc"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="¥50000"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_bx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_bx"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="68"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_dk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_dk"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="¥100000"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_topOrBottom"
        android:layout_marginLeft="@dimen/margin_leftOrRight"
        android:layout_marginRight="@dimen/margin_leftOrRight"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fgh_tv_xyk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_xyk"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_leftOrRight"
            android:text="¥100000"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_jdt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_jdt"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="¥100000"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_hxzh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_hxzh"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="¥100000"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />

        <TextView
            android:id="@+id/fgh_tv_khfx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_leftOrRight"
            android:layout_weight="1"
            android:background="@drawable/fm_grwdy_hv_khfx"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/padding_topOrBottom"
            android:text="钻石客户"
            android:textColor="#666666"
            android:textSize="@dimen/crm_home_fgh_tv_ck_textSize" />
    </LinearLayout>

</LinearLayout>