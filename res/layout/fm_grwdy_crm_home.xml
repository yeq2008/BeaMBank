<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/crm_home_linearLayout_height"
        android:layout_marginLeft="@dimen/crm_home_linearLayout_marginLeft"
        android:layout_marginTop="@dimen/padding_topOrBottom" >

        <RelativeLayout
            android:id="@+id/fgh_rl_userinfo1"
            android:layout_width="0dp"
            android:layout_height="@dimen/crm_home_linearLayout_height"
            android:layout_weight="1"
            android:paddingTop="@dimen/padding_topOrBottom" >

            <LinearLayout
                android:id="@+id/fgh_ll_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fgh_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/crm_home_username_textSize" />

                <ImageView
                    android:id="@+id/fgh_iv_user"
                    android:layout_width="@dimen/crm_home_iv_user_width"
                    android:layout_height="@dimen/crm_home_iv_user_height"
                    android:layout_marginLeft="@dimen/margin_leftOrRight"
                    android:scaleType="center"
                    android:src="@drawable/fm_grwdy_hv_muser" />
            </LinearLayout>

            <TextView
                android:id="@+id/fgh_tv_userpingyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/fgh_ll_userinfo"
                android:text="zhoujielun"
                android:textColor="#666666"
                android:textSize="@dimen/crm_home_userpingyin_textSize" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/grwdy_crm_height"
                android:layout_alignParentBottom="true" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/redColor" />

                <TextView
                    android:id="@+id/fgh_tv_custnum"
                    android:layout_width="@dimen/crm_home_custnum_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:background="@color/whiteColor"
                    android:paddingLeft="@dimen/padding_leftOrRight"
                    android:paddingRight="@dimen/padding_leftOrRight"
                    android:text="客户号:"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/crm_home_custnum_textSize" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fgh_rl_userinfo2"
            android:layout_width="@dimen/crm_home_fgh_rl_userinfo2_width"
            android:layout_height="@dimen/crm_home_fgh_rl_userinfo2_height"
            android:layout_marginRight="@dimen/crm_home_linearLayout_marginLeft"
            android:background="@drawable/fm_grwdy_hv_city" >

            <ImageView
                android:id="@+id/fgh_ib_return"
                android:layout_width="@dimen/grwdy_returnBtn_width"
                android:layout_height="@dimen/grwdy_returnBtn_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/fm_grwdy_return" />

            <LinearLayout
                android:id="@+id/fgh_ll_userinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fgh_ib_return"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fgh_iv_phone"
                    android:layout_width="@dimen/crm_home_iv_phone_width"
                    android:layout_height="@dimen/crm_home_iv_phone_height"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/fm_grwdy_hv_phone" />

                <TextView
                    android:id="@+id/fgh_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_leftOrRight"
                    android:text="15816888888"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/crm_home_fgh_tv_phone_textSize" />

                <TextView
                    android:id="@+id/fgh_tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_leftOrRight"
                    android:text="中国"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/crm_home_fgh_tv_country_textSize" />
            </LinearLayout>

            <Button
                android:id="@+id/fgh_iv_btn_app"
                android:layout_width="@dimen/crm_home_fgh_iv_btn_app_width"
                android:layout_height="@dimen/crm_home_fgh_iv_btn_app_height"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fgh_ll_userinfo3"
                android:layout_marginBottom="@dimen/padding_topOrBottom"
                android:layout_marginTop="@dimen/padding_topOrBottom"
                android:background="@drawable/ac_appset_setting_affirmbutton"
                android:text="开始申请"
                android:textColor="@color/whiteColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/redColor" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fgh_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/crm_home_linearLayout_marginLeft"
        android:layout_marginTop="@dimen/margin_topOrBottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反洗钱风险等级"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />

            <TextView
                android:id="@+id/fgh_tv_fxqfxdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_leftOrRight"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否风险控制"
                android:textColor="#000000"
                android:textSize="@dimen/value_font_size" />

            <TextView
                android:id="@+id/fgh_tv_sffxkz"
