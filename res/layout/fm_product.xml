<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/redTitle_height"
        android:background="@color/whiteColor" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/product_show_downProgress_height"
            android:layout_weight="1"
            android:background="@color/whiteColor"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_leftOrRight"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/myTask_listitem_below_textSize" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_leftOrRight" >

            <RelativeLayout
                android:id="@+id/cate_lay"
                android:layout_width="@dimen/product_cate_lay_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/fm_category_selbg"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/catename"
                    android:layout_width="@dimen/product_catename_width"
                    android:layout_height="@dimen/product_catename_height"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/product_catename_paddingLeft"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/small_textsize" />

                <Button
                    android:id="@+id/catelist"
                    android:layout_width="@dimen/grwdy_returnBtn_width"
                    android:layout_height="@dimen/grwdy_returnBtn_height"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/fm_product_xlbg"
                    android:focusable="false" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_topOrBottom"
         android:layout_marginLeft="@dimen/padding_leftOrRight"
        android:layout_marginRight="@dimen/padding_leftOrRight"
        android:layout_marginBottom="@dimen/padding_topOrBottom"
        android:background="@color/whiteColor"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/indictorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_topOrBottom"
            android:layout_marginTop="@dimen/margin_topOrBottom"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>