<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/fgp_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/fgp_rb01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/paxb_switch_task_textHeight"
                android:background="@drawable/pingan_dtaskbtn"
                android:button="@null"
                android:checked="true"
                android:gravity="left"
                android:paddingLeft="@dimen/paxb_fgp_rb01_paddingLeft"
                android:paddingTop="@dimen/paxb_fgp_rb01_paddingTop"
                android:text="待选择任务 "
                android:textColor="@color/blackColor"
                android:textSize="@dimen/paxb_switch_task_textSize" />

            <RadioButton
                android:id="@+id/fgp_rb02"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/paxb_switch_task_textHeight"
                android:layout_marginLeft="@dimen/padding_leftOrRight"
                android:background="@drawable/pingan_taskbtn"
                android:button="@null"
                android:gravity="left"
                android:paddingLeft="@dimen/paxb_fgp_rb01_paddingLeft"
                android:paddingTop="@dimen/padding_topOrBottom"
                android:text="我的任务 "
                android:textColor="@color/blackColor"
                android:textSize="@dimen/paxb_switch_task_textSize" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/paxb_reset"
            android:layout_width="@dimen/paxb_reset_width"
            android:layout_height="@dimen/paxb_reset_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_reset" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/gfp_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >
    </FrameLayout>

</LinearLayout>