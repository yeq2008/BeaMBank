<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin" >
	    <com.android.widgets.BottomLineTitleView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_marginTop="20dp"
	        android:textColor="@color/blackColor"
	        app:bl_lineColor="#e7e7e7"
	        app:bl_selectorColor="@color/redColor"
	        app:bl_lineSize="1px"
	        app:bl_title="贷款"
	        app:bl_titleColor="@color/blackColor"
	        app:bl_titleFont="18sp" />
	    <ImageView 
	        android:id="@+id/iv_return"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="right"
	        android:src="@drawable/fm_grwdy_return"/>
    </FrameLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/padding"
        android:background="#F0F0F0"
        android:orientation="horizontal" >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="借据编号"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="币种"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="贷款本金"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="贷款余额"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="利息余额"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="累计还款金额"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="实际年利率"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="贷款状态"
            android:textSize="@dimen/crmtitlefont"
            android:textColor="@color/blackColor"
            android:gravity="center" />
    </LinearLayout>
	<WebView 
	    android:id="@+id/webview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin" />
</LinearLayout>