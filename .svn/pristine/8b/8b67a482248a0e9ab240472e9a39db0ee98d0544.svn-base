<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="583dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@color/whiteColor"
        android:orientation="vertical" >

        <com.android.widgets.BottomLineTitleView
            android:id="@+id/bottomLineTitleView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            app:bl_lineColor="#e7e7e7"
            app:bl_lineSize="1px"
            app:bl_selectorColor="@color/redColor"
            app:bl_title="设置密码"
            app:bl_titleColor="@color/blackColor"
            app:bl_titleFont="18sp" >
        </com.android.widgets.BottomLineTitleView>

        <TextView
            android:id="@+id/pop_setpassword_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/bottomLineTitleView1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/pop_setpassword_Original"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/pop_setpassword_1"
            android:layout_below="@+id/bottomLineTitleView1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/pop_setpassword_1"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/blackColor"
            android:textSize="16sp" /> 
        <requestFocus />
        
         <TextView
            android:id="@+id/pop_setpassword_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/pop_setpassword_1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="25sp" />
            <EditText
            android:id="@+id/appset_EditText_Unused"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/pop_setpassword_2"
            android:layout_below="@+id/pop_setpassword_Original"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/pop_setpassword_2"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/blackColor"
            android:textSize="16sp" /> 
            
              <TextView
            android:id="@+id/pop_setpassword_3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/pop_setpassword_2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="25sp" />
            <EditText
            android:id="@+id/appset_EditText_Again"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/pop_setpassword_3"
            android:layout_below="@+id/appset_EditText_Unused"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/pop_setpassword_3"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/blackColor"
            android:textSize="16sp" /> 
            
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <Button
            android:id="@+id/mytask_search_confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_commit"
            android:gravity="center"
            android:textColor="@color/blackColor" />

        <Button
            android:id="@+id/mytask_search_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_close"
            android:gravity="center"
            android:textColor="@color/blackColor"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>