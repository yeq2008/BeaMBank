<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin" >

        <com.android.widgets.BottomLineTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:textColor="@color/blackColor"
            app:bl_lineColor="#e7e7e7"
            app:bl_lineSize="1px"
            app:bl_selectorColor="@color/redColor"
            app:bl_title="贷款"
            app:bl_titleColor="@color/blackColor"
            app:bl_titleFont="@dimen/bottom_line_title_textSize" />

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/iv_return_marginTop"
            android:src="@drawable/fm_grwdy_return" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grwdy_crm_height"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/padding"
        android:background="#F0F0F0"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="借据编号"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="币种"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="贷款本金"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="贷款余额"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="利息余额"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="累计还款金额"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="实际年利率"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="贷款状态"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/crmtitlefont" />
    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin" />

</LinearLayout>