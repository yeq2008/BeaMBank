<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/product_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fm_product_bglo" />

    <ProgressBar
        android:id="@+id/down_loadcard"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignLeft="@id/product_bg"
        android:layout_alignRight="@id/product_bg"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:max="100"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/product_bg"
        android:layout_alignRight="@id/product_bg"
        android:layout_below="@id/product_bg"
        android:layout_marginTop="@dimen/context_dp10_size"
        android:gravity="center"
        android:text="白金卡"
        android:textColor="@color/titleColor"
        android:textSize="@dimen/red_buttom_textSize" />

</RelativeLayout>