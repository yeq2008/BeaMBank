<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

         <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="center|bottom"
            android:textColor="@color/titleColor"
            android:paddingBottom="5dp"
            android:textSize="20sp" />
         
        <TextView
            android:id="@+id/pname"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_toRightOf="@id/no"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/titleColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:paddingBottom="5dp"
            android:gravity="center|bottom"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/cusName"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:gravity="top"  
            android:paddingTop="5dp"
            android:textColor="@color/titleColor"
            android:textSize="18sp" >
        </TextView>

        <ImageView
            android:id="@+id/cusimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cusName"
            android:src="@drawable/mytast_idcard" />

        <TextView
            android:id="@+id/cardNum"
            android:layout_width="230dp"
            android:layout_height="50dp" 
            android:layout_toRightOf="@id/cusimg" 
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deadtext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/cardNum"
            android:gravity="center|top" 
            android:paddingTop="5dp"
            android:text="申请期限"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/deadtext"
            android:gravity="center|top" 
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp" />
        <TextView 
            android:id="@+id/month"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/deadline"
            android:layout_marginLeft="10dp"
            android:gravity="center|top" 
            android:paddingTop="5dp"
            android:text="月"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/moneyview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/month"
            android:gravity="center|top" 
            android:paddingTop="5dp"
            android:text="@string/moneycount"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/moneyConut"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/moneyview"
            android:gravity="top" 
            android:paddingTop="5dp" 
            android:textColor="@color/redColor"
            android:layout_marginLeft="15dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center|top" 
            android:paddingTop="5dp"
           android:layout_marginRight="70dp"
            android:text="元"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mytask_xuxian" />
    </RelativeLayout>

</LinearLayout>