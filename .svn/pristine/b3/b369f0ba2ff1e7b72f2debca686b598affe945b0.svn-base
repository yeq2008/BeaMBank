<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="@dimen/padding" >
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
    	android:layout_height="match_parent"
    	android:layout_marginRight="10dp"
    	android:background="@color/whiteColor" >
    	<View 
    	    android:id="@+id/pzp_iv_vertical_divider1"
    	    android:layout_width="1.5dp"
	        android:layout_height="70dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#E6E6E6" />
    	<TextView 
    	    android:id="@+id/pzp_tv_country"
    	    android:layout_width="wrap_content"
	        android:layout_height="80dp"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/pzp_iv_vertical_divider1"
	        android:paddingRight="10dp"
	        android:tag="country"
	        android:hint="请选择国家"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:gravity="center|right"
	        android:background="#FFFFFF" />
    	<TextView 
    	    android:id="@+id/pzp_tv_province"
    	    android:layout_width="wrap_content"
	        android:layout_height="80dp"
	        android:layout_alignParentRight="true"
	        android:layout_toRightOf="@+id/pzp_iv_vertical_divider1"
	        android:layout_marginRight="10dp"
	        android:paddingRight="10dp"
	        android:tag="province"
	        android:hint="请选择省份"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:gravity="center|right"
	        android:background="#FFFFFF" />
    	<View
	        android:id="@+id/pzp_iv_horizontal_divider1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/pzp_iv_vertical_divider1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#B0B0B0" />
    	
    	<View 
    	    android:id="@+id/pzp_iv_vertical_divider2"
    	    android:layout_width="1.5dp"
	        android:layout_height="70dp"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/pzp_iv_horizontal_divider1"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#E6E6E6" />
    	<TextView 
    	    android:id="@+id/pzp_tv_city"
    	    android:layout_width="wrap_content"
	        android:layout_height="80dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/pzp_iv_horizontal_divider1"
	        android:layout_toLeftOf="@+id/pzp_iv_vertical_divider2"
	        android:paddingRight="10dp"
	        android:tag="city"
	        android:hint="请选择城市"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:gravity="center|right"
	        android:background="#FFFFFF" />
    	<TextView 
    	    android:id="@+id/pzp_tv_zone"
    	    android:layout_width="wrap_content"
	        android:layout_height="80dp"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/pzp_iv_horizontal_divider1"
	        android:layout_toRightOf="@+id/pzp_iv_vertical_divider2"
	        android:layout_marginRight="10dp"
	        android:paddingRight="10dp"
	        android:tag="zone"
	        android:hint="请选择区域"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:gravity="center|right"
	        android:background="#FFFFFF" />
    	<View
	        android:id="@+id/pzp_iv_horizontal_divider2"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/pzp_iv_vertical_divider2"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#B0B0B0" />
    	<EditText 
    	    android:id="@+id/pzp_et_lp"
    	    android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_below="@+id/pzp_iv_horizontal_divider2"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:paddingLeft="10dp"
	        android:hint="请输入楼盘"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:background="#FFFFFF" />
    	<View 
    	    android:id="@+id/pzp_iv_horizontal_divider3"
    	    android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/pzp_et_lp"
    	    android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:background="#B0B0B0" />
    	<EditText 
    	    android:id="@+id/pzp_et_addr"
    	    android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_below="@+id/pzp_iv_horizontal_divider3"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:paddingLeft="10dp"
	        android:hint="请输入详细地址"
	        android:textColorHint="#999999"
	        android:textColor="#333333"
	        android:textSize="@dimen/title_font_size"
	        android:background="#FFFFFF" />
    	
    </RelativeLayout>
	<RelativeLayout 
        android:layout_width="100dp"
    	android:layout_height="match_parent"
    	android:background="@color/whiteColor"  >
        <ImageView
            android:id="@+id/pzp_im_confirm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/btn_commit" />
        <ImageView 
            android:id="@+id/pzp_im_refresh"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_below="@+id/pzp_im_confirm"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/btn_reset" />
        <ImageView 
            android:id="@+id/pzp_im_close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_below="@+id/pzp_im_refresh"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
            android:src="@drawable/btn_close" />
    </RelativeLayout>
</LinearLayout>