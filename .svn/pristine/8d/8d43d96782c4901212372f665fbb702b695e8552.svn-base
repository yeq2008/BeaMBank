<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/setpassword_relativeLayout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/padding"
        android:background="@color/whiteColor"
        android:orientation="vertical" >

        <com.android.widgets.BottomLineTitleView
            android:id="@+id/bottomLineTitleView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            app:bl_lineColor="#e7e7e7"
            app:bl_lineSize="1px"
            app:bl_selectorColor="@color/redColor"
            app:bl_title="设置密码"
            app:bl_titleColor="@color/blackColor"
            app:bl_titleFont="@dimen/bottom_line_title_textSize" >
        </com.android.widgets.BottomLineTitleView>

        <TextView
            android:id="@+id/pop_setpassword_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_below="@id/bottomLineTitleView1"
            android:layout_marginLeft="@dimen/setpassword_setpassword_height"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/pop_setpassword_Original"
            android:layout_width="@dimen/setpassword_setpasswordEV_width"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_alignBottom="@+id/pop_setpassword_1"
            android:layout_below="@+id/bottomLineTitleView1"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:layout_toRightOf="@+id/pop_setpassword_1"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/red_buttom_textSize" />

        <requestFocus />

        <TextView
            android:id="@+id/pop_setpassword_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_below="@id/pop_setpassword_1"
            android:layout_marginLeft="@dimen/setpassword_setpassword_height"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/appset_EditText_Unused"
            android:layout_width="@dimen/setpassword_setpasswordEV_width"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_alignBottom="@id/pop_setpassword_2"
            android:layout_below="@+id/pop_setpassword_Original"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:layout_toRightOf="@id/pop_setpassword_2"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/red_buttom_textSize" />

        <TextView
            android:id="@+id/pop_setpassword_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_below="@id/pop_setpassword_2"
            android:layout_marginLeft="@dimen/setpassword_setpassword_height"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:gravity="center"
            android:text="*"
            android:textColor="#FF0000"
            android:textSize="@dimen/appset_textView_textSize" />

        <EditText
            android:id="@+id/appset_EditText_Again"
            android:layout_width="@dimen/setpassword_setpasswordEV_width"
            android:layout_height="@dimen/setpassword_setpassword_height"
            android:layout_alignBottom="@id/pop_setpassword_3"
            android:layout_below="@+id/appset_EditText_Unused"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/setpassword_setpassword_marginTop"
            android:layout_toRightOf="@id/pop_setpassword_3"
            android:background="@drawable/ac_appset_selector_editframe"
            android:gravity="center|left"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/red_buttom_textSize" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/setpassword_linearLayout_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <Button
            android:id="@+id/mytask_search_confirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding"
            android:background="@drawable/btn_commit"
            android:gravity="center"
            android:textColor="@color/blackColor" />

        <Button
            android:id="@+id/mytask_search_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/image_layout_marginTop"
            android:background="@drawable/btn_close"
            android:gravity="center"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/small_textsize" />
    </LinearLayout>

</LinearLayout>