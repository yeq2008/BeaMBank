<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" 
    android:background="@drawable/mdmsvn_setting">

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:text="域登录"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/blackColor"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/whiteColor"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/aa_iv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:paddingTop="5dp"
            android:src="@drawable/ac_applogin_username" />

        <EditText
            android:id="@+id/yu_et_username"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/aa_iv_username"
            android:background="@drawable/ac_applogin_input"
            android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
            android:hint="请输入用户名"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/aa_iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/yu_et_username"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:src="@drawable/ac_applogin_password" />

        <EditText
            android:id="@+id/yu_et_password"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/yu_et_username"
            android:layout_below="@+id/yu_et_username"
            android:layout_marginTop="20dp"
            android:background="@drawable/ac_applogin_input"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:password="true"
            android:singleLine="true" />
                
    </RelativeLayout>

        <Button
            android:id="@+id/yu_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/ac_appset_setting_affirmbutton"
            android:gravity="center" 
            android:text="域登录"
            android:textColor="@color/whiteColor"
            android:textSize="15sp"/>


</LinearLayout>