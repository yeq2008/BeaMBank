<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res/com.bea.mbank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">
	
	<ImageView 
	    android:id="@+id/fgdpp_iv_01"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="20dp"
    	android:src="@drawable/fm_grwdy_return" />
	
	<com.android.widgets.LineView
        android:id="@+id/fgdpp_line_01"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/fgdpp_iv_01"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        app:lv_lineColor="@color/divider_list"
        app:lv_lineStyle="DottedLine" />

    <TextView 
        android:id="@+id/fgdpp_tv_basicinfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fgdpp_line_01"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:text="基本信息"
        android:textColor="@color/color535353"
        android:textSize="@dimen/title_font_size" />
    <View 
        android:id="@+id/fgdpp_v_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fgdpp_tv_basicinfo"
        android:background="@drawable/listbg" />
    <TextView 
        android:id="@+id/fgdpp_tv_last3return"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fgdpp_v_01"
        android:layout_alignLeft="@+id/fgdpp_tv_basicinfo"
        android:gravity="center_vertical"
        android:text="最近三笔还款信息"
        android:textColor="@color/color535353"
        android:textSize="@dimen/title_font_size" />
    <View 
        android:id="@+id/fgdpp_v_02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fgdpp_tv_last3return"
        android:background="@drawable/listbg" />
    <TextView 
        android:id="@+id/fgdpp_tv_lxxx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fgdpp_v_02"
        android:layout_alignLeft="@+id/fgdpp_tv_basicinfo"
        android:gravity="center_vertical"
        android:text="借款人联系信息"
        android:textColor="@color/color535353"
        android:textSize="@dimen/title_font_size" />
    <View 
        android:id="@+id/fgdpp_v_03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fgdpp_tv_lxxx"
        android:background="@drawable/listbg" />
