<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/collecte_listitem_type"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center|left"
            android:paddingTop="10dp"
            android:textColor="@color/titleColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/collecte_listitem_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:gravity="center|right"
            android:paddingTop="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/collecte_listitem_name"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/collecte_listitem_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/collecte_listitem_name"
            android:src="@drawable/mytask_phoneicon" />

        <TextView
            android:id="@+id/collecte_listitem_phonenumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/collecte_listitem_image"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collecte_listitem_textfenlei"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/collecte_listitem_phonenumber"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:text="五级分类结果"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collecte_listitem_Grade"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/collecte_listitem_textfenlei"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:text="次级"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collecte_listitem_Textyinghuan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/collecte_listitem_Grade"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:text="当期应还金额"
            android:textColor="@color/titleColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collecte_listitem_Repayment"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/collecte_listitem_Textyinghuan"
            android:gravity="center|right"
            android:paddingBottom="10dp"
            android:text="10"
            android:textColor="@color/redColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collecte_listitem_Textmoney"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/collecte_listitem_Repayment"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:text="元"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/mytask_jiantou" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mytask_xuxian" />

</LinearLayout>